author 'Brice Texier <brice@ekylibre.com>'

name 'seriously'
version '0.0.0'
app '> 1.2.0', '< 2.0.0'

add_routes do
  namespace :seriously do
    namespace :v1 do
      resource :game
      resources :guides do
        collection do
          get :run, to: 'seriously/v1/guides#run_all'
        end
        member do
          get :run
        end
      end
      resources :entities
      resources :sales do
        member do
          post :cancel
        end
      end
      resources :purchases
      resources :loans
      resources :scenario_issue
      resources :products, only: [:index]
    end
  end
end

# Install timecop travels
initializer 'seriously.time.traveling' do |_app|
  ApplicationController.class_eval do
    around_action :back_to_future

    def back_to_future
      Seriously::Timescope.freeze do
        yield
      end
    end
  end
end

snippet :seriously
